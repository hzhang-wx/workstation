!vim: set fenc=utf-8:nu:ai:si:et:ts=4:sw=4:ft=xdefaults:
!You must re-run xrdb ~/.Xresources every time you change the file

! colors ------------------------------------------------------------
*background: #111111
*foreground: #babdb6

! xterm ----------------------------------------------------------------------
! English font
XTerm*faceName: DejaVu Sans Mono:antialias=True:pixelsize=16
!Chinese font
!XTerm*faceNameDoublesize: WenQuanYi Zen Hei Mono:antialias=True:pixelsize=16
XTerm*faceNameDoublesize: AR PL UMing TW:antialias=True:pixelsize=18

! fix alt key
xterm*eightBitInput: false
XTerm*metaSendsEscape: true

! copy and paste with clipboard
xterm*translations: #override \
Ctrl Shift <KeyPress> C: copy-selection(CLIPBOARD) \n\
Ctrl Shift <KeyPress> V: insert-selection(CLIPBOARD)

! general settings
xterm*termName: xterm-256color
xterm*geometry: 80x24
xterm*saveLines: 1024
xterm*scrollBar: false
xterm*loginshell: false
xterm*background: #2e3436
xterm*foreground: green
xterm*cursorBlink: false
xterm*bellIsUrgent: true

! allow selecting email/url by double-click
xterm*charClass: 33:48,37-38:48,45-47:48,64:48,58:48,126:48,61:48,63:48,43:48,35:48

! tango color scheme
xterm*color0: #1e1e1e
xterm*color1: #cc0000
xterm*color2: #4e9a06
xterm*color3: #c4a000
xterm*color4: #3465a4
xterm*color5: #75507b
xterm*color6: #0b939b
xterm*color7: #d3d7cf
xterm*color8: #555753
xterm*color9: #ef2929
xterm*color10: #8ae234
xterm*color11: #fce94f
xterm*color12: #729fcf
xterm*color13: #ad7fa8
xterm*color14: #00f5e9
xterm*color15: #eeeeec

! urxvt ----------------------------------------------------------------------

! general
URxvt.preeditType:Root
URxvt.cursorBlink:True
URxvt.saveLines:10240

! transparent
URxvt*.transparent: true
URxvt*.shading: 50
! URxvt.inheritPixmap: True
! URxvt.tintColor: Grey25

! foreground and background
URxvt.foreground: #32cd32
urxvt*background: #2e3436
!urxvt*background: black

! disable the scrollbar
URxvt.scrollBar: False

! alerm
URxvt.urgentOnBell: True

! font
URxvt.font:xft:DejaVu Sans Mono:pixelsize=16:antialias=false,\
xft:AR PL UMing TW:pixelsize=18:antialias=false

! URL
URxvt.perl-ext-common:  default,matcher
URxvt.url-launcher:     /usr/bin/google-chrome
URxvt.matcher.button:   1
URxvt.colorUL: #4682B4

! tango color scheme
URxvt*color0: #1e1e1e
URxvt*color1: #cc0000
URxvt*color2: #4e9a06
URxvt*color3: #c4a000
URxvt*color4: #3465a4
